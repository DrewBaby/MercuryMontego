@model ReviewModel


<div class="container">
    <div class="ReviewSection mt-4 p-4">
        <div>
            <h4 class="text-center p-1 mb-0 mt-2">Join The Conversation</h4>
            <h3 class="text-center mt-0 mb-0"><i class="fas fa-caret-down dropdown"></i></h3>
            <div class="reviewContent">
                <div class="ReviewPostSection">
                    <form method="post" asp-action="SaveReview" asp-controller="GameQuery">
                        <div class="form-group">
                            <textarea asp-for="UserReview" placeholder="place a review ..." class="form-control p-2" cols="30" rows="3"></textarea>
                            <input type="hidden" asp-for="GameID">
                            <input type="hidden" asp-for="UserID">
                            <small class="d-block"><span asp-validation-for="UserReview" class="text-danger font-weight-bold"></span></small>
                            <div class="text-right mt-2"><button type="submit" class="btn btn-outline-danger">Post</button></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <hr>


  