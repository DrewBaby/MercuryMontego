<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameClubProject</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.4.6/css/swiper.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    @*  Andrew Lawson -  Commenting this section out for Merger project.    03/22/2021    
    <link rel="stylesheet" href="~/css/GCDashboard.css" asp-append-version="true" />
    *@
    <script src="https://apis.google.com/js/platform.js" async defer  asp-append-version="true"></script>
    @*<link rel="stylesheet" href="~/css/GCProfile.css" />*@
    @await RenderSectionAsync("Styles", required: false)
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="GameQuery" asp-action="Home">Game Club Project</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1 hideMe">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="GameQuery" asp-action="Home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="GameQuery" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>

                    @* Andrew lawson  - Commented out  as it is dupicated effort.   03/23/2020
                        
                        <div class="g-signin2" data-onsuccess="onSignIn"></div>
                    <form action="~/GameSearch" method="post" class=" searchDiv col-6 text-center ml-5">
                        <input class="form-control mr-2 col-7 ml-5" type="text" name="gameName" placeholder="Search games..">
                        <button class="btn btn-outline-danger my-2 my-sm-0" type="submit">Search</button>
                    </form>*@
                    <partial name="_LoginPartial.cshtml">

                </div>
                <form action="~/GameSearch" method="post" class=" searchDiv col-6 text-center ml-5">
                    <div class="container flex-nowrap">
                        <div class="row">
                            <div class="col-9 text-right">
                                <input class="form-control mr-2 col-7 ml-5" type="text" name="gameName" placeholder="Search games..">
                            </div>
                            <div class="col-3 text-left">
                                <button class="btn btn-outline-danger my-2 my-sm-0" type="submit">Search</button>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row flex-nowrap" style="max-width: inherit;">
            <div class="col-1 collapse show d-md-flex bg-light pt-2 pl-0 box-shadow border-right min-vh-100" id="sidebar" style="max-width:250px;">
                <ul class="nav flex-column flex-nowrap overflow-hidden">
                    <li class="nav-item">
                        <a class="nav-link text-truncate text-dark" asp-area="" asp-controller="GameQuery" asp-action="Home"><i class="bi bi-house-fill"></i> Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-truncate text-dark" asp-area="" asp-controller="GameQuery" asp-action=""><i class="bi bi-person-circle"></i> Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link collapsed text-truncate text-dark" href="#search-submenu" data-toggle="collapse" data-target="#search-submenu"><i class="bi bi-search"></i> Search ▾</a>
                        <div class="collapse" id="search-submenu" aria-expanded="false">
                            <ul class="flex-column pl-2 nav">
                                <li class="nav-item"><a class="nav-link text-truncate text-dark" asp-area="" asp-controller="GameQuery" asp-action=""><i class="bi bi-chevron-right"></i> By Genre</a></li>
                                <li class="nav-item"><a class="nav-link text-truncate text-dark" asp-area="" asp-controller="GameQuery" asp-action=""><i class="bi bi-chevron-right"></i> By Company</a></li>
                            </ul>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-truncate text-dark" asp-area="" asp-controller="GameQuery" asp-action="About"><i class="bi bi-info-circle-fill"></i> About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-truncate text-dark" asp-area="" asp-controller="GameQuery" asp-action="Privacy"><i class="bi bi-shield-lock-fill"></i> Privacy</a>
                    </li>
                </ul>
            </div>
            <div class="col pt-2" id="content-area">
                <div class="container p-0" style="width:inherit">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    </div>


    @*
        <div class="container">
            <main role="main" class="pb-3">

            </main>
        </div>
        @RenderBody()
    *@

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - GameClubProject - <a asp-area="" asp-controller="GameQuery" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
            crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/scrollreveal"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js" integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js" integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/4.4.6/js/swiper.min.js"></script>
    <script src="~/js/GCDashboard.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
